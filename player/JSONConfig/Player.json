{
    "table": "chess_player",
    "columns": {
        "id": "int auto_increment not null primary key",
        "username": {
            "db": "varchar(64) unique",
            "access": "rw",
            "canConstructBy": true
        },
        "password": {
            "db": "varchar(128)",
            "access": "rw",
            "canConstructBy": true
        },
        "full_name": {
            "db": "varchar(255)",
            "access": "rw"
        },
        "email": {
            "db": "varchar(255)",
            "access": "rw"
        },
        "online_player": {
            "db": "char(1) default '1'"
        },
        "country": {
            "db": "varchar(100)",
            "access": "rw"
        },
        "active": {
            "db": "char(1)",
            "access": "r"
        },
        "user_access": {
            "db": "bit(64) default 0",
            "access": "rw"
        },
        "elo":{
            "db": "smallint",
            "access": "rw"
        },
		"title":{
			"db":"varchar2(10)",
			"access": "rw"
		},
        "indexes": ["country", "active", "online_player", "username", "password", "full_name"]
    }
}